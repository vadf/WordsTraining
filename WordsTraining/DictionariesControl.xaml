<UserControl x:Class="WordsTraining.DictionariesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             x:Name="DictionariesView"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Button Content="Create" Height="23" HorizontalAlignment="Left" Margin="252,6,0,0" Name="Create" VerticalAlignment="Top" Width="75" Click="Create_Click" />
        <Button Content="Open" Height="23" HorizontalAlignment="Left" Margin="252,35,0,0" Name="Open" VerticalAlignment="Top" Width="75" Click="Open_Click" />
        <ListBox Name="listDictionaries"
                             Height="Auto"
                             HorizontalAlignment="Left"
                             Margin="6,6,0,0"
                             VerticalAlignment="Stretch"
                             Width="230"
                 ItemsSource="{Binding MyDictionaries}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=.}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
