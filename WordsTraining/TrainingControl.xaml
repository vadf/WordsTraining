<UserControl x:Class="WordsTraining.TrainingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             x:Name="TrainingView" Loaded="TrainingView_Loaded" d:DesignHeight="265" d:DesignWidth="486">
    <Grid>
        <Grid Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="grid1" VerticalAlignment="Stretch" Width="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="185" />
                <ColumnDefinition Width="302" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="trainingSetting" VerticalAlignment="Stretch" Width="Auto">
                <TextBlock Height="23" Name="lbNumOfWords" Text="Number of words to learn" />
                <TextBox Height="23" Name="txtNumOfWords" Width="120" Text="{Binding Path=NumOfWords}" />
                <TextBlock Height="23" Name="lbCounter" Text="Counter Max" />
                <TextBox Height="23" Name="txtCounter" Width="120" Text="{Binding Path=Counter}" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Height="23" Name="lbDirection" Text="Direction" Width="50" />
                    <TextBlock Height="23" Name="lbDirectionValue" Margin="5,0,0,0"/>
                </StackPanel>
                <Button Content="Switch Direction" Height="23" Name="btnSwitchDirection" Width="75" Click="btnSwitchDirection_Click" />
                <Button Content="Start" Height="23" Name="btnStart" Width="75" Click="btnStart_Click" />
            </StackPanel>
            <StackPanel Grid.Column="1" Height="Auto" HorizontalAlignment="Stretch" Name="trainingTest" VerticalAlignment="Stretch" Width="Auto">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Height="23" Name="lbFrom" Text="From" />
                    <TextBlock Height="23" Name="lbFromValue" Margin="5,0,0,0" />
                </StackPanel>
                <TextBox Height="23" Name="txtFrom" Width="120" IsReadOnly="True"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Height="23" Name="lbTo" Text="To" />
                    <TextBlock Height="23" Name="lbToValue" Margin="5,0,0,0" />
                </StackPanel>
                <TextBox Height="23" Name="txtTo" Width="120" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock Height="23" Name="lbResult" Text="Result" />
                    <TextBlock Height="23" Name="lbResultValue" Margin="5,0,0,0" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Check" Height="23" Name="btnCheck" Width="75" Click="btnCheck_Click" />
                    <Button Content="Next" Height="23" Name="btnNetx" Width="75" Click="btnNetx_Click" />
                </StackPanel>
                <Button Content="Stop" Height="23" Name="btnStop" Width="75" Click="btnStop_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
